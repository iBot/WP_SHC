<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ba.ui"
    android:versionCode="1"
    android:versionName="1.0" android:sharedUserLabel="@string/short_app_name">

    <uses-sdk android:minSdkVersion="14" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
	<supports-screens 
                  android:smallScreens="false"
                  android:normalScreens="false"
                  android:largeScreens="false"
                  android:xlargeScreens="true"
                  android:requiresSmallestWidthDp="1280"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/short_app_name" android:theme="@android:style/Theme.Holo">
        <activity
            android:name=".SmartHomeControllerActivity"
            android:configChanges="keyboard" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>