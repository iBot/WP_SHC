<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lightTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/LightControlTitel"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp" android:baselineAligned="false">
		        
        

	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" android:layout_gravity="center_horizontal|top">
	        
	        
	         <TextView
	            android:id="@+id/WhiteLightTitel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="@string/whiteLightTitel"
	            android:textAppearance="?android:attr/textAppearanceLarge" />


	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="50dp"
	        	android:layout_marginBottom="50dp"
	            android:orientation="horizontal" >

	            <Button
	                android:id="@+id/WhiteLightOn"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="left"
	                android:layout_weight="1"
	                android:text="@string/on" />

	            <Button
	                android:id="@+id/WhiteLightOff"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="@string/off" />
	        </LinearLayout>

	         <TextView
	            android:id="@+id/WhiteLightDimmTitel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="@string/whiteLightDim"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

            <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/dimmbar"
                    android:indeterminate="false"/>

	        
	    </LinearLayout>
	    
	    
        
	    <LinearLayout 
	        android:layout_width="0dp"
	          android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
                >
	        
	        <TextView
	            android:id="@+id/ColorLightTitel"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center"
        		android:text="@string/ColorLightTitel"
        		android:textAppearance="?android:attr/textAppearanceLarge" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_marginTop="5dp" android:layout_marginBottom="50dp"
                          android:orientation="horizontal" android:id="@+id/linearLayout">
                <Button android:id="@+id/CallColorPicker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ColorPicker"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/ColorPreview"
                        android:layout_weight="1"
                        android:layout_marginTop="1dp"
                        android:background="#123456"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_margin="4dp" android:editable="false" android:clickable="true"
                        android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                          android:layout_marginTop="5dp" android:layout_marginBottom="20dp"
                          android:orientation="horizontal" android:id="@+id/linearLayout">



                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ColorLightOff"
                            android:id="@+id/ColorButtonOff"
                            android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                          android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
                          android:orientation="horizontal" android:id="@+id/linearLayout">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/ColorFav1"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:background="#000000"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_margin="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/ColorFav2"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:background="#FF0000"
                    android:enabled="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_margin="8dp"/>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                          android:layout_marginTop="10dp" android:layout_marginBottom="30dp"
                          android:orientation="horizontal" android:id="@+id/linearLayout">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"

                        android:id="@+id/ColorFav3"
                        android:layout_weight="1"
                        android:layout_marginTop="1dp"
                        android:background="#00FF00"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_margin="8dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/ColorFav4"
                        android:layout_weight="1"
                        android:layout_marginTop="1dp"
                        android:background="#0000FF"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_margin="8dp"/>
                </LinearLayout>
<!--
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                         android:layout_marginTop="50dp" android:layout_marginBottom="50dp"
                                         android:orientation="horizontal" android:id="@+id/linearLayout">
                <Button android:id="@+id/CallColorSaver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SaveColor"/>
            </LinearLayout>
-->
        </LinearLayout>
	    
	    
    </LinearLayout>


</LinearLayout>